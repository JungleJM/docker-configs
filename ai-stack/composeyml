services:
  ollama:
    image: ollama/ollama:latest
    container_name: ollama
    ports:
      - 11434:11434
    volumes:
      - /var/mnt/thinktank/llm-models:/root/.ollama
    user: 1000:1000 # Replace with your actual UID:GID from 'id' command
    networks:
      - ai-network
    environment:
      - OLLAMA_NUM_GPU=0
    restart: unless-stopped
  open-webui:
    image: ghcr.io/open-webui/open-webui:main
    container_name: open-webui
    ports:
      - 3000:8080
    volumes:
      - open-webui-data:/app/backend/data
    networks:
      - ai-network
    environment:
      - OLLAMA_BASE_URL=http://ollama:11434
      - WEBUI_SECRET_KEY=${WEBUI_SECRET_KEY}
    depends_on:
      - ollama
    restart: unless-stopped
networks:
  ai-network:
    driver: bridge
volumes:
  open-webui-data: null
