services:
  localai:
    image: localai/localai:latest-gpu-vulkan
    container_name: localai
    ports:
      - 8080:8080
    devices:
      - /dev/dri
      - /dev/kfd
    volumes:
      - /var/mnt/thinktank/llm-models:/models:z
    networks:
      - ai-network
    restart: unless-stopped
  open-webui:
    image: ghcr.io/open-webui/open-webui:main
    container_name: open-webui
    ports:
      - 3000:8080 # External port 3000 maps to internal 8080
    volumes:
      - open-webui-data:/app/backend/data
    networks:
      - ai-network
    environment:
      - OPENAI_API_BASE_URL=http://localai:8080/v1 # Changed from OLLAMA_BASE_URL
      - OPENAI_API_KEY=placeholder # LocalAI doesn't need real key but Open WebUI requires it set
      - WEBUI_SECRET_KEY=${WEBUI_SECRET_KEY}
    depends_on:
      - localai
    restart: unless-stopped
networks:
  ai-network:
    driver: bridge
volumes:
  open-webui-data: null
